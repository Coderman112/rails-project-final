<!DOCTYPE html>
<html>
  <head>
    <title>RailsProjectFinal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%if current_user %>
  <%=link_to "All Games", games_path %>
  <%=link_to "New Game", new_game_path %>
  <%=link_to "New Rating", new_rating_path %>
  <%=link_to "All Ratings", ratings_path %>
  <%=link_to "My Games", user_games_path(current_user) %>
  <%= button_to "Log Out", logout_path, method: :post %>

  <%else%>
    <%= link_to "Log In", login_path %>
    <%= link_to "Sign Up", signup_path %>
  <%end%>
  <%=flash[:message]%>
    <%= yield %>
  </body>
</html>
